---
const { link, text, cardknap } = Astro.props;
---

<button class={cardknap}
  ><a href={link}>
    {text}
  </a></button
>

<style>
  button {
    display: flex;
    padding: 5px 20px;
    justify-content: center;
    align-items: center;
    gap: 0.625rem;
    border: 1px solid #000;
    background: var(--White, #f8f9fa);
    box-shadow: 2px 2px 0px 0px rgba(255, 255, 255, 0.25);
    transition: all 0.4s ease;
    width: max-content;
    a {
      font-size: clamp(1em, 1.3vw, 1.3em);
      display: flex;
      flex-direction: column;
      justify-content: center;
      color: var(--Black, #0f0f0f);
      text-align: center;
      letter-spacing: 0.025rem;
      text-transform: uppercase;
    }
  }

  button:hover {
    background: var(--color-secondary, #bf1f26);
    border: 1px solid var(--color-white);
    a {
      color: var(--color-white);
    }
  }
  .cardknap {
    background: var(--color-primary);
    font-size: 1.5rem;
    border-radius: 3px;

    a {
      color: var(--color-white);
    }
  }
</style>
