---
import "../styles/global.css";
import headerbillede from "../assets/header.svg";
import logo from "../assets/logo.svg";
---

<div class="header">
  <img class="headerbilede" src={headerbillede.src} alt="" />
  <div class="link">
    <a href="/trænerne">Trænere</a>
    <a href="/om_os">Om os</a>
    <a href="/"><img src={logo.src} alt="" /></a>
    <a href="/kontakt">Kontakt</a>
    <a href="/holdtræning">Book nu</a>
  </div>
</div>

<style>
  .header {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    position: fixed;
    width: 100%;
    z-index: 1000;
  }
  .link a:hover {
    text-shadow: 2px 2px 0px #bf1f26;
  }
  .headerbilede {
    width: 100%;
    height: 100%;
    object-fit: cover;
    grid-column: 1;
    grid-row: 1;
  }
  a {
    color: #efefef;
    font-family: "Dharma Gothic M";
    font-size: 2.3125rem;
    text-transform: uppercase;
  }
  .link {
    grid-column: 1;
    grid-row: 1;
    display: flex;
    width: 100%;
    max-width: 1300px;
    margin: 0 auto;
    justify-content: space-around;
    align-items: center;
    padding: 0rem 135px 0 150px;
    z-index: 10000;
    a {
      align-items: center;
      img {
        width: 11rem;
        height: auto;
        padding-top: 5px;
      }
    }
  }

  @media (max-width: 768px) {
    .link {
      display: none;
      a {
        align-items: center;
        img {
          width: 8rem;
          height: 6rem;
          padding-top: 5px;
        }
      }
    }
  }
</style>
