---
//@ts-nocheck
import "../styles/global.css";
import headerbillede from "../assets/header.svg";
import logo from "../assets/logo.svg";
---

<div class="header">
  <img class="headerbilede" src={headerbillede.src} alt="" />

  <button
    class="burger"
    id="burgerBtn"
    aria-label="Åbn menu"
    aria-expanded="false"
  >
    <span class="bar"></span>
    <span class="bar"></span>
    <span class="bar"></span>
  </button>
  <div class="link" id="navLinks">
    <a href="/trænerne">Trænere</a>
    <a href="/om_os">Om os</a>
    <a href="/"><img src={logo.src} alt="" /></a>
    <a href="/kontakt">Kontakt</a>
    <a href="/holdtræning">Book nu</a>
  </div>
</div>

<style>
  .header {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    position: fixed;
    width: 100%;
    z-index: 1000;
  }
  .burger {
    display: none;
    position: absolute;
    top: 2rem;
    right: 2rem;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    z-index: 999;
    background: var(--color-background);
    border-radius: 8px;
    box-shadow: 3px 3px 0px 0px var(--color-white);
  }
  .burger .bar {
    width: 30px;
    height: 4px;
    background: #efefef;
    margin: 4px 0;
    border-radius: 2px;
    transition: 0.3s;
    display: block;
  }
  /* Burger til kryds */
  .burger.open .bar:nth-child(1) {
    transform: rotate(45deg) translate(7px, 7px);
  }
  .burger.open .bar:nth-child(2) {
    opacity: 0;
  }
  .burger.open .bar:nth-child(3) {
    transform: rotate(-45deg) translate(10px, -10px);
  }
  .link a:hover {
    text-shadow: 2px 2px 0px #bf1f26;
  }
  .headerbilede {
    width: 100%;
    height: 100%;
    object-fit: cover;
    grid-column: 1;
    grid-row: 1;
  }
  a {
    color: #efefef;
    font-family: "Dharma Gothic M";
    font-size: 2.3125rem;
    text-transform: uppercase;
  }
  .link {
    grid-column: 1;
    grid-row: 1;
    display: flex;
    width: 100%;
    max-width: 1300px;
    margin: 0 auto;
    justify-content: space-around;
    align-items: center;
    padding: 0rem 135px 0 150px;
    z-index: 10000;
    transition: 0.3s;
    a {
      align-items: center;
      img {
        width: 10rem;
        height: auto;
        padding-top: 5px;
        transition: all 0.3s ease;
      }
      img:hover {
        scale: 1.1;
      }
    }
  }
  /* Mobil */
  @media (max-width: 768px) {
    .headerbilede {
      display: none;
    }
    .burger {
      display: flex;
    }
    .link {
      display: flex;
      position: fixed;
      top: 0;
      right: 0;
      height: 100vh;
      width: 100vw;
      flex-direction: column;
      background: var(--color-background);
      padding: 2rem 0;
      z-index: 1;
      transform: translateX(100%);
      transition:
        transform 0.4s cubic-bezier(0.77, 0, 0.175, 1),
        opacity 0.2s;
      box-shadow: -2px 0 16px rgba(0, 0, 0, 0.15);
      a {
        margin: 1rem 0;
        img {
          width: 8rem;
          height: 6rem;
          padding-top: 5px;
        }
      }
    }
    .link.open {
      transform: translateX(0%);

      display: flex;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const burger = document.getElementById("burgerBtn");
    const nav = document.getElementById("navLinks");
    burger.addEventListener("click", function () {
      nav.classList.toggle("open");
      burger.classList.toggle("open");
      burger.setAttribute(
        "aria-expanded",
        nav.classList.contains("open") ? "true" : "false",
      );
    });
  });
</script>
