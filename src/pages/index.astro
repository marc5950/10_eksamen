---
//@ts-nocheck
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import iglogo from "../assets/iglogo.svg";
import fblogo from "../assets/fblogo.svg";
import linkedinlogo from "../assets/linkedinlogo.svg";
import fs_hero from "../assets/fs_hero.png";
import evans_effekt from "../assets/evans_effekt.png";
---

<Layout title="Ashire Oure Boxing Club">
  <div class="heroydre">
    <img src={fs_hero.src} alt="" />
    <div class="heroindre"></div>
  </div>
  <div class="banner"></div>
  <div class="ctaydre ydre flexcol">
    <div class="ctaindre indre flexcol">
      <div class="ctaboks ctaboks1 flex">
        <Button text="Personlig Træning" link="/#" />
        <p>
          Få 1:1 coaching, målrettet feedback og et træningsforløb tilpasset dig
        </p>
      </div>
      <div class="ctaboks ctaboks2 flex">
        <Button text="Se vores hold" link="/holdtræning" />
        <p>
          Se tider, priser og niveauer for vores holdtræning – fra nybegynder
          til erfaren
        </p>
      </div>
      <div class="ctaboks ctaboks3 flex">
        <Button text="Mød vores træner team" link="/trænerne" />
        <p>
          Lær vores dygtige trænere at kende – læs om deres baggrund og tilgang
        </p>
      </div>
    </div>
  </div>
  <div class="evansydre ydre flexcol">
    <div class="evansindre indre flexcol">
      <img class="evans_effekt" src={evans_effekt.src} alt="" />
    </div>
  </div>
  <div class="3dmap ydre flexcol"></div>
  <div class="SoMeydre ydre flexcol">
    <div class="SoMeindre indre flexcol">
      <div class="SoMelinks flex">
        <img src={iglogo.src} alt="link til instagram" />
        <img src={fblogo.src} alt="link til facebook" />
        <img src={linkedinlogo.src} alt="link til linkedin" />
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Hero */
  .heroydre {
    width: 100%;
    height: 90vh;
    img {
      height: 100%;
      width: 100%;
      object-fit: cover;
    }
  }

  @media (max-width: 768px) {
    .heroydre {
      height: 50vh;
    }
  }

  /* Banner */
  .banner {
    width: 100%;
    height: 10vh;
    background-image: url("/champions_banner.png");
    background-repeat: repeat-x;
    background-size: auto 100%; /* Gør billedet 100% højden af .banner */
    background-position: top;
  }

  /* CTA */
  .ctaindre {
    gap: 50px;
  }
  .ctaydre {
    padding: 50px 10px 50px 10px;
    gap: 50px;
  }
  .ctaboks {
    width: 100%;
    background-color: var(--color-white);
    border-radius: 5px;
    gap: 10px;
    padding: 10px;
    p {
      max-width: 40ch;
    }
  }
  .ctaboks2 {
    justify-content: center;
  }
  .ctaboks3 {
    justify-content: end;
  }

  /* Evans */
  .evansindre {
    position: relative;
    height: 1000px;
  }
  .evans_effekt {
    position: absolute;
    top: 0;
    left: -100px;
    object-fit: cover;
  }
  /* SoMe */
  .SoMelinks {
    gap: 20px;
    align-items: center;
    justify-content: center;
    img {
      width: 60px;
      height: 60px;
    }
  }
</style>
