---
import "../styles/global.css";
const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import texture from "../assets/bg_texture.png";
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <link rel="stylesheet" href="https://use.typekit.net/bxz4cka.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <img class="texture" src={texture.src} alt="#" />
    <div id="container">
      <header><Header currentPath={Astro.url.pathname} /></header>
      <main>
        <slot />
      </main>
      <footer><Footer /></footer>
    </div>

    <!-- <script>
      import "../scripts/grained.js";
      window.addEventListener("DOMContentLoaded", () => {
        const options = {
          animate: true,
          patternWidth: 500,
          patternHeight: 300,
          grainOpacity: 0.01,
          grainDensity: 1,
          grainWidth: 4,
          grainHeight: 1,
        };

        grained("#container", options);
      });
    </script> -->

    <style>
      html,
      body {
        margin: 0;
        width: 100%;
        height: 100%;
      }
      .texture {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 100;
        pointer-events: none;
        mix-blend-mode: multiply;
      }
      #container {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
      }
      header {
        position: fixed;
        z-index: 99;
      }
    </style>
  </body>
</html>
