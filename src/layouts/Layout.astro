---
import "../styles/global.css";
const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <link rel="stylesheet" href="https://use.typekit.net/bxz4cka.css" />
  </head>

  <body>
    <div id="container">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>

    <script>
      import "../scripts/grained.js";
      window.addEventListener("DOMContentLoaded", () => {
        const options = {
          animate: true,
          patternWidth: 500,
          patternHeight: 300,
          grainOpacity: 0.01,
          grainDensity: 1,
          grainWidth: 4,
          grainHeight: 1,
        };

        grained("#container", options);
      });
    </script>

    <style>
      html,
      body {
        margin: 0;
        width: 100%;
        height: 100%;
      }
    </style>
  </body>
</html>
